+package top.plutomc.planetpaper.utils;
+
+import com.google.common.util.concurrent.ThreadFactoryBuilder;
+
+import java.util.concurrent.ExecutorService;
+import java.util.concurrent.Executors;
+
+public final class SystemUtil {
+    private SystemUtil() {
+    }
+
+    public static int getMaxCores() {
+        return Runtime.getRuntime().availableProcessors();
+    }
+
+    public static ExecutorService asyncExecService(String thread, int priority) {
+        return Executors.newFixedThreadPool(SystemUtil.getMaxCores() + 1, new ThreadFactoryBuilder()
+                .setNameFormat(thread + "-%d")
+                .setPriority(priority)
+                .build());
+    }
+}
